<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/total_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        />

    <TextView
        android:id="@+id/paypalTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_price_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_gravity="center"
        />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/paypalPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+ Tip" />
            <Button
                android:id="@+id/paypalMinus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- Tip" />

    </LinearLayout>

    <TextView
        android:id="@+id/paypalTipPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tip: 15%"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:id="@+id/paypalTipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="$0.00"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:id="@+id/paypalFinalPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Final Price:"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        />

    <TextView
        android:id="@+id/paypalFinalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_price_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/paypalConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_green_light"
        android:text="Pay with PayPal" />

</LinearLayout>