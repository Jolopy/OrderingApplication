<?xml version="1.0" encoding="utf-8"?>
<GridLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/buttonMenu"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/Employee" />

    <Button
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/HostessHome"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/Hostess" />

    <Button
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/BusboyHome"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/Busboy" />

    <Button
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/buttonCustomerHome"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/Menu" />

    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:id="@+id/buttonCareerHome"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/Career" />

</GridLayout>