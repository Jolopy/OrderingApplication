<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="500dp"
        android:layout_height="166dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/Employee" />

    <Button
        android:id="@+id/HostessHome"
        android:layout_width="500dp"
        android:layout_height="166dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/Hostess" />

    <Button
        android:id="@+id/BusboyHome"
        android:layout_width="500dp"
        android:layout_height="166dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/HostessHome"
        android:layout_marginTop="15dp"
        android:text="@string/Busboy" />

    <Button
        android:id="@+id/buttonCustomerHome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/buttonCareerHome"
        android:layout_alignParentStart="true"
        android:text="@string/Menu" />

    <Button
        android:id="@+id/buttonCareerHome"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/Career" />

</RelativeLayout>