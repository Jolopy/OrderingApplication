<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cczec.ruautomation.ManagerActivity">

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="400dp"
        android:layout_height="316dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/restockItemAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:ems="10"
            android:hint="Item Amount"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/restockItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:ems="10"
            android:hint="Restock Item"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/displayItemAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:autoText="true"
            android:ems="10"
            android:hint="Return Item Amount"
            android:inputType="none" />

        <EditText
            android:id="@+id/getItemAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:ems="10"
            android:hint="Check Item"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/thresholdItemAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:ems="10"
            android:hint="Item Amount"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/setThresholdItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:ems="10"
            android:hint="Set Threshold Item"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Set Threshold" />

        <Button
            android:id="@+id/btnCheckItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Check Item"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="281dp" />

        <Button
            android:id="@+id/btnRestock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:text="Restock" />

    </GridLayout>

    <ListView
        android:id="@+id/invNameView"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/invCountView"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/invNameView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="87dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Inventory Items Running Low"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/invCountView"
        app:layout_constraintEnd_toEndOf="@+id/invCountView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/invNameView" />
</android.support.constraint.ConstraintLayout>
