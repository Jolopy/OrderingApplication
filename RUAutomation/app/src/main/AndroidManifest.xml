<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cczec.ruautomation">

    <supports-screens
        android:smallScreens= "true"
        android:normalScreens="true"
        android:largeScreens= "true"
        android:xlargeScreens="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity"
                    android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="MenuActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".HostessActivity"
            android:label="HostessActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".BusboyActivity"
            android:label="BusboyActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WaiterActivity"
            android:label="WaiterActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PayPopUpActivity"
            android:label="PayPopUpActivity"
            android:theme="@style/AppTheme.PopUp"
            android:screenOrientation="landscape">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>